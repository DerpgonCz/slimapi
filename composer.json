{
    "name": "slimapi/slimapi",
    "description": "SlimAPI",
    "license": "MIT",
    "archive": {
        "exclude": [".*", "*", "!/src", "!LICENSE.md", "!README.md"]
    },
    "autoload": {
        "psr-4": {
            "SlimAPI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SlimAPI\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "nette/bootstrap": "^3.0",
        "slim/slim": "^4.5",
        "slimapi/psr7": "^1.1"
    },
    "require-dev": {
        "tracy/tracy": "^2.7"
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "tests": "phpunit --no-coverage",
        "tests-coverage": "phpunit",
        "phpstan": "phpstan analyse --configuration=/var/www/.phpstan/phpstan.neon src/ tests/"
    }
}
